<src:DialogBase x:Class="ClubArcada.Win.Dialogs.ConfirmDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:src="clr-namespace:ClubArcada.Win.Dialogs"
        Title="Ste si istý?"
        Style="{StaticResource dialogWindowStyle}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="{Binding AlertText}" Foreground="White" FontSize="18" Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center" ></TextBlock>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Style="{StaticResource btnCashIn}" Width="200" VerticalAlignment="Center" Margin="5" Content="Áno" Click="Button_Click"></Button>
            <Button Style="{StaticResource btnDelete}" Width="200" VerticalAlignment="Center" Margin="5" Content="Nie" Click="btnNo_Click"></Button>
            
        </StackPanel>
    </Grid>
</src:DialogBase>