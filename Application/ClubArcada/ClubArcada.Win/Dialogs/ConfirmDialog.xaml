<Window x:Class="ClubArcada.Win.Dialogs.ConfirmDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Style="{StaticResource smallWindowStyle}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="{Binding AlertText}" Foreground="White" FontSize="18" Margin="10" HorizontalAlignment="Center" VerticalAlignment="Center" ></TextBlock>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Style="{StaticResource btnCashIn}" Width="200" VerticalAlignment="Center" Margin="10,0,10,0" Height="40" Content="Áno" Click="Button_Click"></Button>
            <Button Style="{StaticResource btnDelete}" Width="200" VerticalAlignment="Center" Margin="10,0,10,0" Height="40" Content="Nie" Click="btnNo_Click"></Button>
            
        </StackPanel>
    </Grid>
</Window>