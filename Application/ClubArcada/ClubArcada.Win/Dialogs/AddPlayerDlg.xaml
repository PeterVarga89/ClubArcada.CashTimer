<Window x:Class="ClubArcada.Win.Dialogs.AddPlayerDlg"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Style="{StaticResource dialogWindowStyle}"
        >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button Style="{StaticResource btnCashIn}" Margin="5" Grid.Row="0" Content="Existujuci hrac" Click="ExistingPlayer_Click"></Button>
        <Button Style="{StaticResource btnCashIn}" Margin="5" Grid.Row="1" Content="Novy hrac" Click="Register_Click"></Button>
        <Button Style="{StaticResource btnDelete}" Margin="5" Grid.Row="3" Content="Zrusit" Click="Cancel_Click"></Button>
    </Grid>

</Window>
