<src:DialogBase x:Class="ClubArcada.Win.Dialogs.AddPlayerDlg"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:src="clr-namespace:ClubArcada.Win.Dialogs"
        Title="Pridanie hráča"
        Style="{StaticResource dialogWindowStyle}">
    <Grid>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
        <Button Style="{StaticResource btnCashIn}" Width="200" Margin="5" Content="Existujúci hráč" Click="ExistingPlayer_Click"></Button>
        <Button Style="{StaticResource btnCashIn}" Width="200" Margin="5" Content="Registrovať hráča" Click="Register_Click"></Button>
        <Button Style="{StaticResource btnDelete}" Width="200" Margin="5" Content="Zrusit" Click="Cancel_Click"></Button>
        </StackPanel>
    </Grid>
</src:DialogBase>