<Window x:Class="ClubArcada.Win.Dialogs.SyncDlg"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:wpfx="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit/extended"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Style="{StaticResource smallWindowStyle}"
        >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Background="Black" Grid.Row="0">
            <StackPanel Orientation="Horizontal">
                <Image Height="60" Margin="6,0,0,0" Source="../Images/Logo.PNG" />
                <TextBlock Text="Cash Game Timer System" FontSize="32" FontWeight="Bold" Margin="20,0,0,0" Foreground="White" VerticalAlignment="Center"></TextBlock>
            </StackPanel>
            <Border BorderThickness="1" BorderBrush="Gray" Height="1" VerticalAlignment="Bottom"></Border>
        </Grid>

        <wpfx:BusyIndicator Name="busyIndicator" Grid.Row="1" Background="Black" BusyContent="Synchronizuju sa hraci a turnaje">
            
        </wpfx:BusyIndicator>
        
        <TextBlock Name="tbBusy" Grid.RowSpan="2"></TextBlock>
    </Grid>
</Window>
