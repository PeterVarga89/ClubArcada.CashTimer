<src:DialogBase x:Class="ClubArcada.Win.Dialogs.TotalCashOutDlg"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:wpfx="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit/extended"
        xmlns:ctr="clr-namespace:ClubArcada.Win.Controls"
        xmlns:src="clr-namespace:ClubArcada.Win.Dialogs"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Style="{StaticResource dialogWindowStyle}">
    <Window.Resources>
        <Style TargetType="Label">
            <Setter Property="VerticalContentAlignment" Value="Center"></Setter>
            <Setter Property="FontSize" Value="14"></Setter>
            <Setter Property="Padding" Value="0"></Setter>
            <Setter Property="Margin" Value="0"></Setter>
            <Setter Property="HorizontalContentAlignment" Value="Right"></Setter>
            <Setter Property="Foreground" Value="Wheat"></Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120" />
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Content="Meno" />
        <TextBox IsEnabled="False" Grid.Column="2" Margin="0,2,5,2" Text="Cash Game" />

        <Label Grid.Row="1" Content="Dátum" />
        <TextBox Name="txtDate" IsEnabled="False" Grid.Column="2" Grid.Row="1" Margin="0,2,5,2" Text="{Binding Date, Mode=OneWay}" />

        <Label Grid.Row="2" Content="Cash In Total" />
        <ctr:DoubleTextBox IsEnabled="False" Grid.Column="2" Grid.Row="2" Margin="0,2,5,2" Text="{Binding CashInTotal, Mode=OneWay}" />

        <Label Grid.Row="3" Content="Cash Out Total" />
        <ctr:DoubleTextBox IsEnabled="False" Grid.Column="2" Grid.Row="3" Margin="0,2,5,2" Text="{Binding CashOutTotal, Mode=OneWay}" />

        <Label Grid.Row="4" Content="Strava/Účet" />
        <ctr:DoubleTextBox IsEnabled="True" Grid.Column="2" Grid.Row="4" Margin="0,2,5,2" Text="{Binding Food}" />

        <Label Grid.Row="5" Content="CG Liga" />
        <ctr:DoubleTextBox IsEnabled="True" Grid.Column="2" Grid.Row="5" Margin="0,2,5,2" Text="{Binding CGLeague}" />

        <Label Grid.Row="6" Content="Bank APC" />
        <ctr:DoubleTextBox IsEnabled="True" Grid.Column="2" Grid.Row="6" Margin="0,2,5,2" Text="{Binding APCLeague}" />

        <Label Grid.Row="7" Content="Vyplatený Bonus" />
        <TextBox IsEnabled="True" Grid.Column="2" Grid.Row="7" Margin="0,2,5,2" Text="{Binding PaidBonus}" />

        <Label Grid.Row="8" Content="Rake" />
        <ctr:DoubleTextBox IsEnabled="True" Grid.Column="2" Grid.Row="8" Margin="0,2,5,2" Text="{Binding Rake}" />

        <Label Grid.Row="9" Content="Rozbiehač" />
        <ctr:DoubleTextBox IsEnabled="True" Grid.Column="2" Grid.Row="9" Margin="0,2,5,2" Text="{Binding RunHelp}" />

        <Label Grid.Row="10" Content="Floor" />
        <ctr:DoubleTextBox IsEnabled="True" Grid.Column="2" Grid.Row="10" Margin="0,2,5,2" Text="{Binding Floor}" />

        <Label Grid.Row="11" Content="Dealer" />
        <ctr:DoubleTextBox IsEnabled="True" Grid.Column="2" Grid.Row="11" Margin="0,2,5,2" Text="{Binding Dealer}" />

        <Label Grid.Row="12" Content="Komment" />
        <TextBox IsEnabled="True" Grid.Column="2" Grid.Row="12" AcceptsReturn="True" Margin="0,2,5,2" Text="{Binding Comment}" />

        <StackPanel Grid.Row="13" Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Style="{StaticResource btnCashIn}" Margin="5" Width="200" Content="Uložiť a Ukončiť" Click="Button_Click" ></Button>
            <Button Style="{StaticResource btnDelete}" Margin="5" Width="200" Content="Zavrieť" Click="Button_Click_1" ></Button>
        </StackPanel>

        <wpfx:BusyIndicator Name="BusyIndicator" Grid.ColumnSpan="3" Grid.RowSpan="15" ></wpfx:BusyIndicator>
    </Grid>
</src:DialogBase>