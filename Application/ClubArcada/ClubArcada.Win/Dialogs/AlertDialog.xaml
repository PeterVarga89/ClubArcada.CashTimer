<src:DialogBase x:Class="ClubArcada.Win.Dialogs.AlertDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:src="clr-namespace:ClubArcada.Win.Dialogs"
        Style="{StaticResource dialogWindowStyle}"
        >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="{Binding AlertText}" Foreground="White" FontSize="18" Margin="10" HorizontalAlignment="Center" VerticalAlignment="Center" ></TextBlock>

        <Button Style="{StaticResource btnCashIn}" Margin="5" HorizontalAlignment="Right" Width="200" Grid.Row="1" Content="OK" Click="Button_Click"/>
    </Grid>
</src:DialogBase>
