    <Style TargetType="Window" x:Key="dialogWindowStyle">
        <Setter Property="AllowsTransparency" Value="True"></Setter>
        <Setter Property="ResizeMode" Value="NoResize"></Setter>
        <Setter Property="Background" Value="Transparent"></Setter>
        <Setter Property="Topmost" Value="False"></Setter>
        <Setter Property="WindowState" Value="Normal"></Setter>
        <Setter Property="WindowStyle" Value="None"></Setter>
        <Setter Property="HorizontalAlignment" Value="Stretch"></Setter>
        <Setter Property="VerticalAlignment" Value="Stretch"></Setter>
        <Setter Property="SizeToContent" Value="Height"></Setter>
        <Setter Property="MinHeight" Value="140"></Setter>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Window}">
                    <Grid>
                        <Border Background="#2C0000" Padding="0,2,0,6" CornerRadius="0,0,4,4" BorderBrush="DarkGray" BorderThickness="0,1,0,1">
                            <Grid Background="Transparent">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="70"></RowDefinition>
                                    <RowDefinition Height="*"></RowDefinition>
                                </Grid.RowDefinitions>

                                <Border CornerRadius="2,2,0,0" Margin="0,0,0,5">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="DarkRed" Offset="0.0" />
                                            <GradientStop Color="#2C0000" Offset="1.0" />
                                        </LinearGradientBrush>
                                    </Border.Background>
                                    <TextBlock Text="{TemplateBinding Title}" FontSize="24" FontWeight="Bold" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Center" Padding="0" Margin="10,0,0,0" />
                                </Border>

                                <ContentPresenter Grid.Row="1" />
                            </Grid>
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

